<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/src"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn3"
                android:enabled="true"
                android:onClick="onClick"
                android:textColor="#E91E63" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="레시피 등록"
                android:textAlignment="center"
                android:textSize="25dp"
                android:fontFamily="@font/font3"
                android:textColor="#000002"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/bb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back"
                android:enabled="true"
                android:onClick="onClick"
                android:textColor="#E91E63" />
        </LinearLayout>
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진 등록"
            android:textSize="20dp"
            android:fontFamily="@font/font"
            android:textColor="#000002"/>


    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재료 등록"
            android:textSize="20dp"
            android:fontFamily="@font/font"
            android:textColor="#000002"/>


    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="조리법 등록"
            android:textSize="20dp"
            android:fontFamily="@font/font"
            android:textColor="#000002"/>


    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <Button
            android:id="@+id/toList"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/list"
            android:background="@drawable/btn2"
            android:enabled="true"
            android:onClick="onClick"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:fontFamily="@font/font3"
            android:textSize="10dp"
            android:text="리스트"
            android:textColor="#141414"

            />






        <Button
            android:id="@+id/toMyPg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/user"
            android:background="@drawable/btn2"
            android:enabled="true"
            android:onClick="onClick"
            android:fontFamily="@font/font3"
            android:textSize="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="마이페이지"
            android:layout_weight="1"
            android:textColor="#141414" />



        <Button
            android:id="@+id/toUd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/home"
            android:background="@drawable/btn2"
            android:enabled="true"
            android:onClick="onClick"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="홈"
            android:fontFamily="@font/font3"
            android:textSize="10dp"
            android:layout_weight="1"
            android:textColor="#141414" />





        <Button
            android:id="@+id/toErl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/erl"
            android:background="@drawable/btn2"
            android:enabled="true"
            android:onClick="onClick"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="레시피등록"
            android:fontFamily="@font/font3"
            android:textSize="10dp"
            android:layout_weight="1"
            android:textColor="#141414" />



    </LinearLayout>

</LinearLayout>